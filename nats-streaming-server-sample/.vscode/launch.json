  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Publisher",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/server",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "publish:local"
      ]
    },
    {
      "name": "Debug Listener",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/server",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "listen:local"
      ]
    },
    {
      "name": "Attach to Docker Container",
      "type": "node",
      "request": "attach",
      "remoteRoot": "/app/",
      "port": 9229,
      "address": "localhost",
      "localRoot": "${workspaceFolder}/server/",
      "protocol": "inspector",
      "restart": true
    },
    {
      "name": "Attach Local",
      "type": "node",
      "request": "launch",
      "cwd": "${workspaceFolder}/server",
      "runtimeExecutable": "npm",
      "runtimeArgs": [
        "run",
        "start"
      ]
    },
  ]
}